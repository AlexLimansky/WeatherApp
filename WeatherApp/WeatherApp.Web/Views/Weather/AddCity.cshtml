@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = @localizer["AddCity"];
}
@model WeatherApp.Web.Models.CityWeatherInfo
<h2>@localizer["AddCity"]</h2>
<div>
    <form asp-action="AddCity">
        <div class="form-group">
            <label>@localizer["Enter the city name you'd like to add"]:</label>
            <input type="text" class="form-control" placeholder="@localizer["City name here(latin only)"]" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">@localizer["Save"]</button>
        </div>
    </form>
</div>
