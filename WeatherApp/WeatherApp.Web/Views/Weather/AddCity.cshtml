@{
    ViewData["Title"] = "AddCity";
}
@model WeatherApp.Web.Models.CityWeatherInfo
<h2>AddCity</h2>
<div>
    <p>Create a phone:</p>
    <form class="form-horizontal" asp-action="AddCity">
        <div class="form-group">
            <label class="control-label col-sm-2">Enter the city name you'd like to add:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="Enter city name here(latin only)" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>
    </form>
</div>
