@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@model WeatherApp.Data.Entities.CityWeatherInfo
<div class="col-md-3">
    <div class="panel panel-default">
        <div class="panel-heading text-center">
            @{
                var img = $"http://openweathermap.org/img/w/{Model.Icon}.png";
            }
            <span class="h3">@Model.Name <img src="@img" /></span>
            <button type="button" class="close" data-toggle="modal" data-target="#myModal" data-id=@Model.Name>&times;</button>
        </div>
        <div class="panel-body">
            <div class="text-center">
                <span class="h2">@Model.Temperature &#8451;</span>
            </div>
            <div class="text-center">
                @localizer["Weather is"] @Model.WeatherState
                <br />
                @localizer["Humidity is"] @Model.Humidity %
                <br />
                @localizer["Clouds is"] @Model.Clouds %
            </div>
        </div>
    </div>
</div>
